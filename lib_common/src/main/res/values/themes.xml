<resources>
    <!-- Base application theme. -->
    <style name="Theme.Common" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/lib_common_light_primary</item>
        <item name="colorOnPrimary">@color/lib_common_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/lib_common_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/lib_common_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/lib_common_light_secondary</item>
        <item name="colorOnSecondary">@color/lib_common_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/lib_common_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/lib_common_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/lib_common_light_tertiary</item>
        <item name="colorOnTertiary">@color/lib_common_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/lib_common_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/lib_common_light_onTertiaryContainer</item>
        <item name="colorError">@color/lib_common_light_error</item>
        <item name="colorOnError">@color/lib_common_light_onError</item>
        <item name="colorErrorContainer">@color/lib_common_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/lib_common_light_onErrorContainer</item>
        <item name="colorOutline">@color/lib_common_light_outline</item>
        <item name="android:colorBackground">@color/lib_common_light_background</item>
        <item name="colorOnBackground">@color/lib_common_light_onBackground</item>
        <item name="colorSurface">@color/lib_common_light_surface</item>
        <item name="colorOnSurface">@color/lib_common_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/lib_common_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/lib_common_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/lib_common_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/lib_common_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/lib_common_light_inversePrimary</item>
    </style>


    <style name="NoSpaceActionBarTheme" parent="Widget.Material3.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="ThemeOverlay.Material3.ActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme.BlackBackBar" parent="Theme.Common">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="navigationIcon">@drawable/ic_return_white</item>
        <item name="toolbarStyle">@style/NoSpaceActionBarTheme</item>
    </style>

    <style name="ToolbarTheme.BackBar" parent="Theme.Common">
        <item name="navigationIcon">@drawable/ic_return</item>
        <item name="toolbarStyle">@style/NoSpaceActionBarTheme</item>
    </style>

    <style name="Theme.Common.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.Common.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="textview_15sp_style" parent="wrap_content_style">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>